{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
  ],
  "jsRules": {},
  "rules": {
    "member-access": [true, "no-public"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "arrays": "always",
          "functions": "never",
          "objects": "always"
        }
      }
    ],
    "quotemark": [true, "single"],
    "no-console": false,
    "no-unused-variable": [true, {"ignore-pattern": "^_"}]
  },
  "rulesDirectory": []
}